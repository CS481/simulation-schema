{
    "$id": "State",
    "type": "object",
    "required": ["user_waiting"],
    "properties": {
        "turn_number": {
            "type": "number",
            "mimimum": "0"
        },
        "response_deadline": {
            "type": "string",
            "format": "date-time"
        },
        "resources": {
            "type": "object",
            "patternProperties": {
                "^.*$": {"type": "number"}
            }
        },
        "resource_deltas": {
            "type": "object",
            "patternProperties": {
                "^.*$": {"type": "number"}
            }
        },
        "active_frame": {
            "type": "object",
            "required":["prompt", "responses"],
            "properties": {
                "prompt": {
                    "type": "string"
                },
                "responses": {
                    "type": "array",
                    "items": {"type" : "string"}
                }
            }
        },
        "user_waiting": {
            "type": "boolean"
        }
    }
}